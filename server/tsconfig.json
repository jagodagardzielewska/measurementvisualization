{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "strict": true,
  
      "baseUrl": "..",
      "paths": {
        "@shared/*": ["shared/*"]
      },
  
      "skipLibCheck": true,
  
      "outDir": "../dist/server"
    },
    "include": [
      "./**/*",
      "../shared/**/*",
      "../vite.config.ts"
    ]
  }
  