{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "strict": true,
  
      "baseUrl": "..",
      "paths": {
        "@shared/*": ["shared/*"]
      },
  
      "skipLibCheck": true,
  
      "rootDir": "..",              
      "outDir": "../dist/server"    
    },
    "include": [
      "server/**/*",
      "shared/**/*",
      "vite.config.ts"
    ]
  }
  