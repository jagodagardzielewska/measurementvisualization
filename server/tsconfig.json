{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "strict": true,
  
      "baseUrl": "..",
      "paths": {
        "@shared/*": ["shared/*"]
      },
  
      "skipLibCheck": true,
  
      "rootDir": "../server",
      "outDir": "../dist/server/server"
    },
    "include": [
      "../server/**/*",
      "../shared/**/*"
    ],
    "exclude": [
      "../dist"
    ]
  }
  